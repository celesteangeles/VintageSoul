<body class="bodylogin">  <!--CoMIENZA BODY-->
    <h1>¡ Bienvenido/a !</h1>
    <div class="contenedor">
     
     <!--CAJA1--> 
        <div class="caja1"> 
          
          


          <h3>Register </h3>
         
          <% if(typeof errors != 'undefined') { %>  
            <p style="font-size: 18px;color: red; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">Error:</p>
            <ul>
               <% for(var i = 0; i < errors.length; i++) { %>
                <li> <%= errors[i].msg %> </li>
               <% } %>
                  
            </ul>
            <% } %>
        
          <form action="/users/register" method="POST">
           
            <label for="user_name"></label>
            <input class="inputstyle" type="text" name="user_name" id="nombre" placeholder="Nombre y apellido">
            <select class="inputstyle"  name="rol">
              <option value="1"> Admin </option>
              <option value="2"> Usuario comun </option>
            </select>
            <label for="user_email"></label>
            <input class="inputstyle" type="email" name="user_email"  placeholder="Email">
            <label for="user_password"></label>
            <input class="inputstyle" type="password" name="user_password" id="password" placeholder="Contraseña">
            <label for="telefono"></label>
            <input  class="inputstyle" type="telefono" name="user_phone" placeholder="Telefono">
            <label for="edad"></label>
            <input type="date" id="start" name="user_age" class="inputstyle" value="2020-10-22" min="1940-01-01" max="2020-12-31">
                          
       <br>
            <button type="submit" value="Registrarme">Registrarme</button>
          
              
            <button type="reset" value="Borrar">Borrar</button>
      
              </form>
            
          </div>
     
          
        </div>
        
    
    </div>
