<body class="bodylogin">  <!--CoMIENZA BODY-->
    <h1>¡ Bienvenido/a  !</h1>
    <div class="contenedor">  
        
    
        <!--CAJA2 -->
        <div class="caja2">
    
               <h3>Login</h3>
    
               <% if(typeof errors != 'undefined') { %>  
                  <p style="font-size: 20px;color: red; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">Error:</p>
                  <ul>
                     <% for(var i = 0; i < errors.length; i++) { %>
                      <li> <%= errors[i].msg %> </li>
                     <% } %>
                        
                  </ul>
                  <% } %>
          
            <form action="/users/login" method="POST">
               <p class="stylecaja2"><label for="email"></label>
                  <input class="inputstyle" type="email" name="user_email" placeholder="Email">
               </p>
    
               <p class="stylecaja2"><label for="password"></label>
                  <input class="inputstyle" type="password" name="user_password" placeholder="Contraseña">
               </p>
            
               <label style="font-size:25px;">Recordar</label>
               <input type="checkbox" name="recordame">       
         <br>
               
      
            <button class="btncarga" type="submit"> Ingresar </button>
            <button class="btncarga" type="reset"> Cancelar </button>
            
              <h2>¿No tenés usuario? <br>
               <a href="/users/register" > Registrate acá</a></h2>
          </form>
         
<% if (typeof errorAlLoguear != 'undefined'{ %>
 <h4 style="font-size: 20px;color: red; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;"><%= errorAlLoguear %></h4>
}) 

        </div>
    
        
